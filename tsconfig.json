{
  "compilerOptions": {
      "outDir": "./public/js",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es2015",
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "target": "es6",
      "lib": ["es2016", "dom"],
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./resources/ts"
  },
  "include": ["resources/ts/**/*"],
  "exclude": ["node_modules"]

}

